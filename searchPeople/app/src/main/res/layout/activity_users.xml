<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="7dp"
    tools:context="com.example.gaya.searchpeople.GridImageTextActivity">

    <ImageView
        android:id="@+id/android_gridview_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/android_gridview_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/android_gridview_image"
        android:layout_alignLeft="@+id/android_gridview_image"
        android:layout_alignRight="@+id/android_gridview_image"
        android:layout_alignStart="@+id/android_gridview_image"
        android:layout_below="@+id/android_gridview_image"
        android:textAlignment="center"
        android:textSize="12sp" />

</RelativeLayout>
